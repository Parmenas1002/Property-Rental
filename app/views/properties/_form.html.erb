<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name ,"Property "%>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>RWF
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :building_age %>
    <%= form.number_field :building_age %>year/years old
  </div>

  <div class="field">
    <%= form.label :remarks %>
    <%= form.text_area :remarks %>
  </div>
  <hr>
  
  <% if action_name == 'new' %>
    <% 2.times do |num| %>
      <%= form.fields_for :stations do |station| %>
      <h2>Name of railway line<%= num += 1 %></h2>
      <div class="railway_name">
        <%= station.label :railway_name, "Name of railway line" %>
        <%= station.text_field :railway_name %>
      </div>
      <div class="station_name">
        <%= station.label :station_name, "Station name" %>
        <%= station.text_field :station_name %>
      </div>
      <div class="walking_distance">
        <%= station.label :distance, "How many minutes walk" %>
        <%= station.number_field :distance %>min/mins
      </div>
      <% end %>
    <% end %>
  <% end %>

  <% if action_name == 'edit' %>
      <% @num = 0 %>
      <%= form.fields_for :stations do |station| %>
      <h2>Name of railway line<%= @num += 1 %></h2>
      <div class="railway_name">
        <%= station.label :railway_name, "Name of railway line" %>
        <%= station.text_field :railway_name %>
      </div>
      <div class="station_name">
        <%= station.label :station_name, "Station name" %>
        <%= station.text_field :station_name %>
      </div>
      <div class="walking_distance">
        <%= station.label :distance, "How many minutes walk" %>
        <%= station.number_field :distance %>min/mins
      </div>
    <% end %>
    
  <% end %>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
